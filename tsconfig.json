{
  "compilerOptions": {
    "target": "es2016",
    "module": "es6",
    //"moduleResolution": "nodenext",                              
    "lib": [
      "es2016",
      "dom",
      "DOM.Iterable"
     ],             
    "baseUrl": "./",
    "rootDir": "./src",
    "paths": { 
      "/*": ["./src/*"]
    },  
    "allowImportingTsExtensions": true, 
    "allowJs": true,   
    "sourceMap": true,  
    "outDir": "./build",                                   
    "removeComments": true,                           
    "noEmit": true,   
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,  
    "strict": true,                                    
    "noImplicitAny": true,                           
    "strictNullChecks": true, 
    "noUnusedLocals": true,                          
    "noUnusedParameters": true ,
    "skipLibCheck": true    
  },                      
  "exclude": ["node_modules"],
  "ts-node": {
    "target": "es2016",
    "module": "es6",
    "moduleResolution": "nodenext",
    "esm": true,
    "files": true,
    "compilerOptions": {
      "baseUrl": "./",
      "rootDir": "./src",
      "paths": { 
        "/*": ["./src/*"]
      },
    }
  },
  "include": ["src"]
}

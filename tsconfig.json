{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    //"moduleResolution": "Classic",                                  
     "lib": [
      "es2016",
      "dom",
      "DOM.Iterable"
     ],             
    "baseUrl": "./src",
    "rootDir": "./src",
    //"root": ["./src"],
    "paths": { "/*": ["./*"] },  
    "allowImportingTsExtensions": true, 
    "allowJs": true,   
    "sourceMap": true,  
    "outDir": "./build",                                   
    "removeComments": true,                           
    "noEmit": true,   
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,  
    "strict": true,                                    
    "noImplicitAny": true,                           
    "strictNullChecks": true, 
    "noUnusedLocals": true,                          
    "noUnusedParameters": true ,
    "skipLibCheck": true    
  },                      
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  },
  "include": ["src"]
}

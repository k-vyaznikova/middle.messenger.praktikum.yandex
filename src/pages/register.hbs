<div class = "container gradient">
    <div class = "form-module register">
        <h1>Регистрация</h1>
        <form url="{{urlSubmit}}" class = "form-container">
            <div class = "form-body">
                {{> input inputName="email" inputLabel = "Почта" inputId="emailId" inputType="text" errorText = "Тестовая ошибка"}}
                {{> input inputName="login" inputLabel = "Логин" inputId="loginId" inputType="text" errorText = "Тестовая ошибка"}}
                {{> input inputName="name" inputLabel = "Имя" inputId="nameId" inputType="text" errorText = "Тестовая ошибка"}}
                {{> input inputName="surname" inputLabel = "Фамилия" inputId="surnameId" inputType="text" errorText = "Тестовая ошибка"}}
                {{> input inputName="password" inputLabel = "Пароль" inputId="passId" inputType="password" errorText = "Тестовая ошибка"}}
                {{> input inputName="password" inputLabel = "Пароль (ещё раз)" inputId="passConfId" inputType="password" errorText = "Тестовая ошибка"}}
            </div>
            <div class = "form-footer">
                {{> submit-btn buttonText="Зарегистрироваться"}}
                {{> button-secondary hrefLink="#" classLink = "reg-link" textLink="Войти"}}
            </div>
        </form>
    </div>
</div>
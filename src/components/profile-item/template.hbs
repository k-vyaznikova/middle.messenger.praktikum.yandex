<div class = "profile-item {{#ifEqual infoType "textarea"}} textarea {{/ifEqual}}">
    <label class = "profile-name" for = "{{infoName}}">{{infoLabel}}</label>
    {{#if editMode}} 
        {{#ifEqual infoType "textarea"}}
            <textarea class = "profile-value" name = "{{infoName}}" id = "{{infoName}}" placeholder = "{{infoPlaceholder}}">{{infoValue}}</textarea>
        {{else}}
            <input class = "profile-value" value = "{{infoValue}}"  name = "{{infoName}}" id = "{{infoName}}" type="{{infoType}}"/>
        {{/ifEqual}}
        
    {{else}}
        {{#ifEqual infoType "textarea"}}
            <div class = "profile-text">
                {{infoValue}}  
            </div>
        {{else}}
            <input class = "profile-value" value = "{{infoValue}}" name = "{{infoName}}" id = "{{infoName}}" disabled type="{{infoType}}"/>
        {{/ifEqual}}
    {{/if}}   
</div>
